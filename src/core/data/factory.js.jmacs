class RawLiteral extends GenericTerm {
	constructor(s_value) {
		super();
		this.value = s_value;
	}

	get isSimple() {
		return !this.language && !this.datatype.equals(KT_XSD_STRING);
	}

	get isLanguaged() {
		return !!this.language;
